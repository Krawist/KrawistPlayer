<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview_color_preview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorPrimary" />

    <SeekBar
        android:layout_marginTop="50dp"
        android:layout_marginBottom="25dp"
        android:id="@+id/seekbar_red_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <SeekBar
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:id="@+id/seekbar_green_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <SeekBar
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:id="@+id/seekbar_blue_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <EditText
            android:id="@+id/edittext_color_hexadecimal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="#000000"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <Button
            android:layout_toLeftOf="@id/button_color_dialog_validate"
            android:id="@+id/button_color_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textStyle="bold"
            android:text="@string/delete_dialog_cancel_button_label"/>

        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/button_color_dialog_validate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textStyle="bold"
            android:text="Valider"/>

    </RelativeLayout>

</LinearLayout>