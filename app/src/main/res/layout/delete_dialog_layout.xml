<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="@drawable/delete_dialog_background">


    <TextView
        android:id="@+id/textview_delete_dialog_content"
        android:layout_width="match_parent"
        android:text="@string/delete_dialog_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dialog_title_text_size"
        android:textColor="@android:color/black"
        android:layout_marginBottom="@dimen/fab_margin"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_delete_dialog_validate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/delete_dialog_validate_button_label"
            android:background="@color/transparent"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/dialog_button_text_size"/>

        <Button
            android:id="@+id/button_delete_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/button_delete_dialog_validate"
            android:text="@string/delete_dialog_cancel_button_label"
            android:background="@color/transparent"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/dialog_button_text_size"/>

    </RelativeLayout>

</LinearLayout>