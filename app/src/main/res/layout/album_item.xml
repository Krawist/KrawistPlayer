<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="2dp"
    android:layout_marginBottom="2dp"
    android:id="@+id/layout_root"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/imageview_album_art"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#72000000">

<!--            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                android:alpha=".3"/>-->

            <TextView
                android:id="@+id/textview_album_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/albumdisplay_album_name_size"
                android:text="Album"
                android:singleLine="true"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

            <TextView
                android:layout_below="@id/textview_album_title"
                android:id="@+id/textview_album_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/albumdisplay_album_artist_size"
                android:singleLine="true"
                android:gravity="center"
                android:text="Artist"
                android:textColor="@android:color/white"/>

        </RelativeLayout>

    </RelativeLayout>
